load("@build_bazel_rules_nodejs//:index.bzl", "js_library")
load("@npm//@bazel/typescript:index.bzl", "ts_project", "ts_config")
load("@rules_pkg//pkg:mappings.bzl", "pkg_filegroup", "pkg_files")

genrule(
    name = "wasm_exec_copy",
    srcs = ["@go_sdk//:misc/wasm/wasm_exec.js"],
    outs = ["wasm_exec.js"],
    cmd = "cat $(location @go_sdk//:misc/wasm/wasm_exec.js) > $@",
)

ts_project(
    name = "wasm_exec",
    srcs = [":wasm_exec.js"],
    allow_js = True,
    declaration = True,
)

ts_project(
    name = "app",
    srcs = ["app.ts"],
    deps = [
	    ":wasm_exec",
    ],
)

ts_project(
    name = "background",
    srcs = ["background.ts"],
    deps = [":app"],
)

ts_project(
    name = "options",
    srcs = ["options.ts"],
    deps = [":app"],
)

filegroup(
    name = "optionsui",
    srcs = [
	":background.js",
        "options.html",
	":options.js",
        "style.css",
    ],
    visibility = ["//visibility:public"],
)

pkg_files(
    name = "pkg_files",
    srcs = [
        ":optionsui",
    ],
)

pkg_filegroup(
    name = "pkg",
    srcs = [
        ":pkg_files",
    ],
    prefix = "/html",
    visibility = ["//visibility:public"],
)
